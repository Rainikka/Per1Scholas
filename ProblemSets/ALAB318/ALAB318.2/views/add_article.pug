doctype html
html
  head
    title= title
  body
    h1 Add New Article
    form(action="/add" method="POST")
      label(for="title") Title:
      input(type="text" name="title" required)
      br
      label(for="body") Body:
      textarea(name="body" required)
      br
      button(type="submit") Submit
    a(href="/") Back to Home